<mah:MetroWindow x:Class="CleanBudget.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanBudget.Views" mc:Ignorable="d"
        TitleCharacterCasing="Normal" AllowsTransparency="True"
        Icon="../Resources/Icons/budget.ico" BorderThickness="0"
        WindowTitleBrush="{StaticResource TitleBarPrimary}"
        Title="Clean budget" ResizeMode="CanResizeWithGrip">

    <Grid>
        <UserControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</mah:MetroWindow>